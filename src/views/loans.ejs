<%- include("partials/header"); %>

<div class="student-loans-page">
  <!-- Title Section -->
  <div class="student-loans-title">
    <h1>STUDENT LOANS</h1>
    <p class="quick-look">quick look</p>
  </div>

  <!-- Steps Section -->
  <div class="loan-steps">
    <!-- Step 1 -->
    <div class="loan-step blue-section">
      <div class="loan-step-number">01</div>
      <div class="loan-step-text">
        <h2>Compare Rates</h2>
        <ul>
          <li><strong>Federal loans:</strong> Fixed rates from 4.99-7.54%</li>
          <li><strong>Private loans:</strong> Variable rates from 3.5-13%</li>
          <li>Check multiple lenders for best rates</li>
          <li>Consider both fixed and variable options</li>
        </ul>
      </div>
    </div>

    <!-- Step 2 -->
    <div class="loan-step gray-section">
      <div class="loan-step-text">
        <h2>Review Your Options</h2>
        <ul>
          <li>Federal Direct Loans (subsidized & unsubsidized)</li>
          <li>Parent PLUS Loans</li>
          <li>Private Student Loans</li>
          <li>Work-study and scholarship opportunities</li>
        </ul>
      </div>
      <div class="loan-step-number">02</div>
    </div>

    <!-- Step 3 -->
    <div class="loan-step blue-section">
      <div class="loan-step-number">03</div>
      <div class="loan-step-text">
        <h2>Pick a Loan</h2>
        <ul>
          <li>Consider repayment terms (5-20 years)</li>
          <li>Evaluate grace periods and deferment options, and origination fees</li>
          <li>Review borrower protections and benefits</li>
        </ul>
      </div>
    </div>

    <!-- Step 4 -->
    <div class="loan-step gray-section">
      <div class="loan-step-text">
        <h2>Apply</h2>
        <ul>
          <li>Complete FAFSA for federal loans</li>
          <li>Gather required documents (tax returns, pay stubs)</li>
          <li>Submit credit check authorization</li>
          <li>Sign master promissory note</li>
        </ul>
      </div>
      <div class="loan-step-number">04</div>
    </div>
  </div>
</div>

<%- include("partials/footer"); %>
