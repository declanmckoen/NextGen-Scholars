<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NextGen Scholars</title>
  <link rel="stylesheet" href="/login.css">
  <link rel="stylesheet" href="/styles.css">
  <link rel="stylesheet" href="/home-screen.css">
  <link rel="stylesheet" href="/sign-up.css">
  <link rel="stylesheet" href="/about-us.css">
  <link rel="stylesheet" href="/student-edit.css">
  <link rel="stylesheet" href="/student-profile.css">
  <link rel="stylesheet" href="/profile-form.css">
  <link rel="stylesheet" href="/styles-educator.css">
  <link rel="stylesheet" href="/programs.css">
  <link rel="stylesheet" href="/Scholarship-page-styles.css">
  <link rel="stylesheet" href="/University-page-styles.css">
  <link rel="stylesheet" href="/extracurriculars.css">
  <link rel="stylesheet" href="/fasfa.css">
  <link rel="stylesheet" href="/internship.css">
  <link rel="stylesheet" href="/courses.css">
  <link rel="stylesheet" href="/tutoring.css">
  <link rel="stylesheet" href="/projects.css">
  <link rel="stylesheet" href="/loans.css">
  <link rel="stylesheet" href="/college-prep.css">
  
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Fredoka:wght@300..700&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap');
  </style>
</head>
<body>
  <nav class="header">
    <div class="nav-left">
      <h1><a href="/"><span class="montserrat">NextGen</span> <span class="fredoka">Scholars</span></a></h1>
      <ul>
        <% if (!user) { %>
          <li class="dropdown">
            <a href="/login">Students</a>
            <ul class="dropdown-content">
              <li><a href="/login">Log-in</a></li>
              <li><a href="/signup">Sign-up</a></li>
              <li><a href="/courses">Courses</a></li>
              <li><a href="/tutoring">Tutoring</a></li>
              <li><a href="/programs">Programs</a></li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="/login">Parents</a>
            <ul class="dropdown-content">
              <li><a href="/login">Log-in</a></li>
              <li><a href="/signup">Sign-up</a></li>
              <li><a href="/university">Universities</a></li>
              <li><a href="/college-prep">College-Prep</a></li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="/login">Educators</a>
            <ul class="dropdown-content">
              <li><a href="/login">Log-in</a></li>
              <li><a href="/signup">Sign-up</a></li>
              <li><a href="/courses">Courses</a></li>
            </ul>
          </li>
          <li><a href="/about-us">About Us</a></li>
        <% } %>
      </ul>
    </div>

    <div class="nav-right">
      <ul>
        <% if (user && (user.studentProfile || user.educatorProfile)) { %>
          <% if (user.studentProfile) { %>
            <li><a href="/student-home/<%= user._id %>">View your home page</a></li>
            <li><a href="/student-profile/<%= user._id %>">View student profile</a></li>
            <li><a href="/logout">Log out</a></li>
          <% } else { %>
            <li><a href="/educator-home/<%= user._id %>">View your home page</a></li>
            <li><a href="/educator-profile/<%= user._id %>">View educator profile</a></li>
            <li><a href="/logout">Log out</a></li>
          <% } %>
        <% } else { %>
          <li><a href="/login">Log in</a></li>
        <% } %>
      </ul>
    <div>
  </nav>
