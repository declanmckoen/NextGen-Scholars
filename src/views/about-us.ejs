<!-- Includes the header partial file, which likely contains the top navigation bar or introductory section of the webpage. -->
<%- include("partials/header"); %>

<div class="about-container">
  <!-- Container for the "About Us" section. -->
    <div class="about-text">
      <!-- Text content for the "About Us" section. -->
      <h2>About Us</h2>
      <!-- Short description or tagline about the platform. -->
      <p>Helping students succeed through the power of planning.</p>
      <!-- Button linking to the signup page with a "Join for free" call-to-action. -->
      <a href="/signup" class="join-button">Join for free</a>
    </div>
    <!-- Container for the image related to the "About Us" section. -->
    <div class="about-image">
      <!-- Image of a computer with descriptive alt text. -->
      <img src="/computer.png" alt="Computer" class="computer-image">
    </div>
</div>
<!-- Container for the "How it works" section. -->
<div class="how-it-works-container">
    <div class="how-it-works-title">
      <!-- Repeated container for the section's title. -->
        <div class="how-it-works-title">
          <!-- Text elements -->
            <div class="line">How</div>
            <div class="line green">NextGen.com</div>
            <div class="line">works:</div>
          </div>
    </div>
    <!-- Container for the content explaining the features. -->
    <div class="how-it-works-content">
      <!-- First feature block. -->
      <div class="feature">
        <!-- Icon representing personalized plans with descriptive alt text. -->
        <img src="/icon1.png" alt="Personalized Plans Icon" class="feature-icon">
        <!-- Text container for the feature. -->
        <div class="feature-text">
          <!-- Feature title. -->
          <h3>Personalized Plans</h3>
          <!-- Description of the personalized plans feature. -->
          <p>This plan includes recommended academic courses, available scholarships, extracurricular activities, internships, and personal projects, tailored to help the student meet their college and career goals.</p>
        </div>
      </div>
      
      <!-- Second feature block. -->
      <div class="feature">
        <!-- Icon representing the update progress feature with descriptive alt text. -->
        <img src="/icon2.png" alt="Update Progress Icon" class="feature-icon">
        <div class="feature-text">
          <!-- Text container for the feature. -->
          <h3>Update Progress</h3>
          <!-- Description of the update progress feature. -->
          <p>Students can continuously track their progress by following their plan. They can update the platform with achievements, adjust goals, and receive new recommendations as they move through high school.</p>
        </div>
      </div>
      
      <!-- Third feature block. -->
      <div class="feature">
        <!-- Icon representing access to resources with descriptive alt text. -->
        <img src="/icon3.png" alt="Access Resources Icon" class="feature-icon">
        <div class="feature-text">
          <!-- Text container for the feature. -->
          <h3>Access Resources</h3>
          <!-- Description of the access resources feature. -->
          <p>Throughout their high school journey, students have access to valuable resources such as SAT/ACT prep, tutoring, college application guidance, and information on scholarships and internships.</p>
        </div>
      </div>
    </div>
  </div>  

