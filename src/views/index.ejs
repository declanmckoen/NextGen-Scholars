<%- include("partials/header"); %>

<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NextGen Scholars</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Fredoka:wght@300..700&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap');
  </style>
</head>
<body>
  <!-- Title Section -->
  <section class="title-section">
    <h1><span class="montserrat-green">NextGen</span> <span class="fredoka-blue">Scholars</span></h1>
    <p class="subtitle">Unlock Your Path to College Success</p>
  </section>

  <!-- Introduction Section -->
  <section class="introduction">
    <div class="intro-text">
      <h3>Create your academic plan now</h3>
      <p>NextGen Scholars is a free platform designed to empower underserved high school students by providing personalized 4-year plans tailored to their academic and career goals.</p>
      <a href="/signup" class="start-button">Start Here</a>
    </div>
    <div class="intro-image">
      <img src="/graduating-students.png" alt="Graduating students">
    </div>
  </section>

  <!-- Features Section -->
  <section class="features">
    <div class="feature-item feature-green">
      <a href="/scholarships">
        <img src="/scholarships-icon.png" alt="Scholarships Icon">
      </a>
      <p>Scholarships</p>
    </div>
    <div class="feature-item feature-blue">
      <a href="/university">
        <img src="/universities-icon.png" alt="Universities Icon">
      </a>
      <p>Universities</p>
    </div>
    <div class="feature-item feature-green">
      <a href="/extracurriculars">
        <img src="/extracurriculars-icon.png" alt="Extracurriculars Icon">
      </a>
      <p>Extracurriculars</p>
    </div>
    <div class="feature-item feature-blue">
      <a href="/programs">
        <img src="/programs-icon.png" alt="Programs Icon">
      </a>
      <p>Programs</p>
    </div>
  </section>
</body>
</html>


<%- include("partials/footer"); %>