<%- include("partials/header"); %>

<div class="login-page">
  <div class="login-container">
    <h2>Login</h2>
    <form>
      <label for="email">Email</label>
      <input type="text" name="email" placeholder="Email" required />
      <div class="email error"></div>

      <label for="password">Password</label>
      <input type="password" name="password" placeholder="Password" required />
      <div class="password error"></div>

      <a href="#" class="forgot-password">Forgot password?</a>
      
      <button class="login-button">Sign in</button>
      
      <p class="no-account">Donâ€™t have an account? <a href="/signup">Sign Up</a></p>
    </form>
  </div>
  
  <div class="login-illustration">
    <img src="/owl-image.png" alt="Owl on books" />
  </div>
</div>



<script>
  const form = document.querySelector("form");
  const emailError = document.querySelector(".email.error");
  const passwordError = document.querySelector(".password.error");

  form.addEventListener("submit", async (event) => {
    event.preventDefault();

    emailError.textContent = "";
    passwordError.textContent = "";

    const email = form.email.value;
    const password = form.password.value;

    try {
      const res = await fetch("/login", {
        method: "POST",
        body: JSON.stringify({ email, password }),
        headers: { "Content-Type": "application/json" }
      });
      const data = await res.json();
      if (data.errors) {
        emailError.textContent = data.errors.email;
        passwordError.textContent = data.errors.password;
      }
      if (data.studentProfile) {
        location.assign(`/student-home/${data.id}`);
      }
      else if (data.educatorProfile) {
        location.assign(`/educator-home/${data.id}`);
      }
      else {
        console.log("No profile!");
      }
    }
    catch (err) {
      console.log(err);
    }
  });
</script>

